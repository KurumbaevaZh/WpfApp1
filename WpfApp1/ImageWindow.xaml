<Window x:Class="WpfApp1.ImageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="ImageWindow" Height="450" Width="800">
    <Grid>
        <Image x:Name="SelectedImage" HorizontalAlignment="Left" Height="260" VerticalAlignment="Top" Width="295" Margin="223,46,0,0"/>
        <Button x:Name="SelectImageButton" Content="Выбрать изображение"
                HorizontalAlignment="Left" VerticalAlignment="Top" Width="205" Height="30" Margin="148,356,0,0"
                Click="SelectImageButton_Click"/>
        <Button x:Name="SaveImageButton" Content="Сохранить изображение"
                HorizontalAlignment="Left" VerticalAlignment="Top" Width="229" Height="30" Margin="440,356,0,0"
                Click="SaveImageButton_Click"/>
    </Grid>
</Window>
