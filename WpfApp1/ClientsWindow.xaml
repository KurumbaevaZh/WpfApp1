<Window x:Class="WpfApp1.ClientsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ClientsWindow" Height="400" Width="600">
    <Grid>
        <DataGrid x:Name="dgClients" AutoGenerateColumns="True" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10"/>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Center">
            <Button Content="Добавить клиента" Click="AddClient_Click" Margin="5"/>
            <Button Content="Удалить клиента" Click="DeleteClient_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
