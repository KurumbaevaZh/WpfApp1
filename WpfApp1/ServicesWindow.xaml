<Window x:Class="WpfApp1.ServicesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ServicesWindow" Height="400" Width="600">
    <Grid>
        <DataGrid x:Name="dgServices" AutoGenerateColumns="True" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10"/>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Center">
            <Button Content="Добавить услугу" Click="AddService_Click" Margin="5"/>
            <Button Content="Удалить услугу" Click="DeleteService_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
